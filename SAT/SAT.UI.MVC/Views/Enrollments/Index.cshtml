@model IEnumerable<SAT.DATA.EF.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollment";
}



<header id="home" class="backstretched single-page-hero">
    <div class="dark-overlay single-page-hero">
        <div class="container single-page-hero">
            <div class="vertical-center-js text-center">
                <h1>@ViewData["Title"]</h1>
                <p class="section-sub-title">Place your students in the most awesomest of classes</p>
            </div>
        </div>
    </div>
</header>

<section id="our-courses">
    <div class="section-inner">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-xs-12" role="tabpanel">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-justified image-tabs" id="course-tabs" role="tablist">
                                        @foreach (var item in Model)
                                        {
                                            <li role="presentation" class="summer-term active">
                                                <a href="#summer-term" aria-controls="summer-term" role="tab" data-toggle="tab" class=".half-opacity ">
                                                    <span>@item.ScheduledClass.Course.CourseName</span>
                                                </a>
                                            </li>

                                        }

                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <!-- Tab panes -->
                                    <p>
                                        <a asp-action="Create">Create New</a>
                                    </p>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Student.FullName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.StudentId)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ScheduledClass.Course.CourseName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ScheduledClass.StartDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ScheduledClass.EndDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ScheduledClass.Scs.Scsname)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Student.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StudentId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ScheduledClass.Course.CourseName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ScheduledClass.StartDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ScheduledClass.EndDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ScheduledClass.Scs.Scsname)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.EnrollmentId">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.EnrollmentId">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.EnrollmentId">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


